# ============================================
# CONFIGURAÇÕES GERAIS
# ============================================
NODE_ENV=development

# ============================================
# BACKEND (NestJS)
# ============================================
BACKEND_PORT=3000
JWT_SECRET=seu_jwt_secret_super_secreto_aqui_mude_em_producao
JWT_EXPIRES_IN=7d

# Usuário padrão (criado automaticamente)
DEFAULT_USER_EMAIL=admin@example.com
DEFAULT_USER_PASSWORD=123456
DEFAULT_USER_NAME=Administrador

# ============================================
# MONGODB
# ============================================
MONGODB_URI=mongodb://mongo:27017/gdash-weather
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123

# ============================================
# RABBITMQ
# ============================================
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_QUEUE=weather-data
RABBITMQ_MANAGEMENT_PORT=15672

# ============================================
# PYTHON - WEATHER COLLECTOR
# ============================================
# Intervalo de coleta em segundos (3600 = 1 hora)
WEATHER_COLLECTION_INTERVAL=3600

# Escolha uma API de clima:
# Opção 1: Open-Meteo (não precisa de API key)
WEATHER_API=open-meteo
WEATHER_LATITUDE=-22.9249
WEATHER_LONGITUDE=-45.4625

# Opção 2: OpenWeather (precisa criar conta e gerar API key)
# WEATHER_API=openweather
# OPENWEATHER_API_KEY=sua_api_key_aqui
# WEATHER_CITY=Pindamonhangaba
# WEATHER_COUNTRY_CODE=BR

# ============================================
# WORKER GO
# ============================================
GO_WORKER_RETRY_ATTEMPTS=3
GO_WORKER_RETRY_DELAY=5

# ============================================
# FRONTEND
# ============================================
VITE_API_URL=http://localhost:3000/api

# ============================================
# OPCIONAL - API EXTERNA
# ============================================
# PokéAPI não precisa de key
EXTERNAL_API=pokeapi

# Ou SWAPI
# EXTERNAL_API=swapi